<%if @jobs.present?%>
<div class="mt-3">
  <h1>All Jobs</h1>
</div>

<div class="container mx-auto mt-4">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg p-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= truncate(job.title, length: 20, separator: ' ') %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= job.company_name %></h6>
            <h6 class="card-subtitle mb-2 text-muted"><%= job.status %></h6>
            <p class="card-text"><%= truncate(job.description, length: 20, separator: ' ') %></p>
            <%= link_to "View Details", job_path(job), class: "btn btn-outline-primary ml-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%else%>
  <div class="mt-3">
    <h1>Nothing! pls create any Job first </h1>
  </div>
<%end%>


