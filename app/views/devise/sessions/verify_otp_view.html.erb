<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login with otp</p>

                <%= form_with(model: resource, url: verify_otp_login_path) do |f| %>
                  <div class="form-group mx-sm-3 mb-2">
                    <%= f.label :email %>
                    <%= f.email_field :email,value: params[:email], autocomplete: "email", class: "form-control" %>
                  </div>
                  <div class="form-group mx-sm-3 mb-2">
                    <%= f.label :otp, 'One-Time Password' %>
                    <%= f.text_field :otp, required: true,autofocus: true,value: '', class: "form-control" %>
                  </div>
                  <%= f.submit "Log in",class: "btn btn-primary"%>
                <% end %>
              
                <div class="form-group mt-4">
                  <%= button_to "Resend OTP", resend_otp_path,params: { email: params[:email] }, method: :patch,'data-turbo-frame': 'resend-frame', 'data-turbo-action': 'replace',class: "btn btn-outline-primary" %>
                </div>
              </div>


              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
