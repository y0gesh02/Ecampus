<div class="container align-items-center justify-content-center w-50 shadow-lg p-4 mb-5 mt-5 bg-light rounded">
  
  <div class="mt-4">
    <% total_time, total_marks,passing_marks = total_time_and_marks(@test.papers) %>
    <div class="card">
    <div class="card-header">
      Test Details : <%=@test.name%>
    </div>
    <div class="card-body">
      <h5 class="card-title"><strong>Total </strong> <%= @test.papers.size %> <strong>Paper in Test</strong></h5>
      <p class="card-text">Total Time :  <%= total_time %> minutes</p>
      <p class="card-text">Total Marks : <%= total_marks %> marks.</p>
      <p class="card-text mt-0">Passing Marks : <%= passing_marks %> marks</p>
      <p class="card-text mt-0">Details : <%= @test.details %> </p>
    </div>
  </div>

  <div class="container mx-auto mt-4">
    <div class="row ml-2">
    <% @test.papers.each do |t| %>
      <div class="card mt-4 mb-1 ml-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Paper : <%= t.name%></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">Paper Time :  <%= t.duration_in_minutes%> minutes</h6>
          <p class="card-text">Total Paper Marks : <%= t.total_marks%></p>
          <p class="card-text">Passing Marks for Paper :  <%= t.passing_marks%></p>
        </div>
      </div>
    <%end%>
    </div>
  </div>
  
  <div class="flex">
    <%= link_to "Edit Test", edit_user_test_path,class: "btn btn-outline-primary mr-2 mt-2" %>
    <%= button_to "Delete Test", user_test_path(@test), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-primary mr-2 mt-2 " %>
    <%= link_to "Back", user_test_index_path,class: "btn btn-outline-primary mr-2 mt-2" %>
  <div>
</div>