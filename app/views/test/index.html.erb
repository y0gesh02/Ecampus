<div class="container align-items-center justify-content-center w-50 shadow-lg p-5 mb-5 mt-5 bg-light rounded">
  <h1><%= pluralize(@tests.size, "Test") %> </h1>
  <ul class="users">
    <% @tests.each do |t| %>
      <li>
        <%= link_to t.name,  user_test_path(current_user, t) %>
        created
        <%= time_ago_in_words(t.created_at) %> ago
      </li>
    <% end %>
  </ul>
  
  <div class="mt-3">
    <%= link_to "Create New Test", new_user_test_path, class: "btn btn-outline-primary mr-2" %>
    <%= link_to "Back",user_path(current_user),class: "btn btn-outline-primary mr-2 " %>
  </div>
</div>